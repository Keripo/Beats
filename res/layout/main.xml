<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/main"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<!-- Background image -->
	<ImageView
		android:id="@+id/bg"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:scaleType="centerCrop"
		android:src="@drawable/bg_blue"
	/>
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<!-- Header -->
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true">
				<TextView
					android:id="@+id/difficulty"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:background="@drawable/difficulty_header"
				/>
				<TextView
					android:id="@+id/autoPlay"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:text="@string/Menu_auto"
				/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				>
				<ImageView
					android:id="@+id/gameModePrev"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/mode_prev"
				/>
				<ImageView
					android:id="@+id/gameMode"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/mode_step_down"
				/>
				<ImageView
					android:id="@+id/gameModeNext"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/mode_next"
				/>
			</LinearLayout>
		</RelativeLayout>
		<!-- Body -->
		<RelativeLayout
		    android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent">
				<!-- Logo -->
				<ImageView
					android:id="@+id/logo"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:src="@drawable/beats_logo_beta"
				/>
				<!-- Menu items -->
				<LinearLayout
					android:id="@+id/menu_main_items_LinearLayout"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:gravity="center_horizontal"
					android:orientation="vertical">
					<TextView
						android:id="@+id/start"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/Menu_start"
					/>
					<TextView
						android:id="@+id/select_song"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/Menu_select_song"
					/>
					<TextView
						android:id="@+id/download_songs"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/Menu_download_songs"
					/>
					<TextView
						android:id="@+id/settings"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/Menu_settings"
					/>
					<TextView
						android:id="@+id/exit"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/Menu_exit"
					/>
				</LinearLayout>
			</LinearLayout>
		</RelativeLayout>
	</LinearLayout>
</RelativeLayout>